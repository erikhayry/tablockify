{
  "name": "Tablockify",
  "version": "4",
  "description": "Prevent your tab to be closed or reloaded",
  "background": { "scripts": ["js/background.js"] },
  "icons" : {
    "48" : "icon-48.png",
    "128" : "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js" : ["js/lock.js"]
    }
  ],
  "manifest_version": 2,
  "permissions": [
    "http://*/", 
    "https://*/",
    "tabs",
    "contextMenus"
  ]
}