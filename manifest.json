{
  "name": "Tablockify",
  "version": "1",
  "description": "Prevent your tab to be closed or reloaded",
  "background": { "scripts": ["js/background.js"] },
  "icons" : {
    "48" : "icon-48.png",
    "128" : "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/", "https://*/"],
      "js" : ["js/lock.js"]
    }
  ],
  "page_action": {
    "default_icon": {
      "19": "icon-19.png",
      "38": "icon-38.png"
    }
  },  
  "manifest_version": 2,
  "permissions": [
    "http://*/", 
    "https://*/",
    "tabs",
    "contextMenus"
  ]
}